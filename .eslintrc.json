{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-unused-vars": [0],
    "no-undef": [0],
    "no-console": [0],
    "indent": [0],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": [0]
  }
}
